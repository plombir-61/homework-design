<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeworkDesign" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/MyChipsTheme</item>

    </style>

    <style name="MyTextViewTheme" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">serif-monospace</item>
        <item name="android:textSize">28dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyButtonTheme" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">5dp</item>
        <item name="backgroundTint">@color/my_yellow</item>
        <item name="android:textColor">@color/my_grey</item>
        <item name="strokeWidth">2dp</item>
        <item name="strokeColor">@color/my_brown</item>
    </style>

    <style name="MyLeftButtonTheme" parent="MyButtonTheme">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="MyChipsTheme" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chips_grey</item>
        <item name="backgroundTint">@color/chips_grey</item>
        <item name="android:textColor">@color/chips_yellow</item>

    </style>


</resources>